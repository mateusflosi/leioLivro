<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jstl/core_rt"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Pontuação</title>
    </head>
    <body>
        <h1>Relatorio de ${login}</h1>
        <h2>Pontuação: ${pontos} </h2>
        <h2>Livros lidos:</h2>
            <c:forEach var="item" items="${livrosLidos}">
                <li>${item}</li>
            </c:forEach>
        <h2>Estilos lidos:</h2>
        <ul>
            <c:forEach var="item" items="${estilosLidos}">
                <li>${item.estilo}: ${item.qtd}</li>
            </c:forEach>
        </ul>    
        <h2>Trofeus:</h2>
        <ul>
            <c:forEach var="item" items="${trofeus}">
                <li>${item}</li>
            </c:forEach>
        </ul>   
    </body>
</html>
